@model IEnumerable<JobOffers.Models.JobsViewModel>


<div class="modal-content">

@foreach (var gr in Model)
{
    <h3> @gr.JobTitle</h3>
    <table class="table table-bordered table-hover" style="width:100%;">
        <tr>
            <th>
                Searcher Name
            </th>
            <th>
                Message
            </th>
            <th>
                Date of Apply
            </th>
        </tr>
        @foreach (var item in gr.Items)
        {
            <tr>
                <td>
                    @item.user.UserName
                </td>
                <td>
                    @item.Message
                </td>
                <td>
                    @item.ApplyDate
                </td>
            </tr>
        }
    </table>
}

</div>